<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientApp.HelloController">
   <bottom>
      <HBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="message" onAction="#onSendButtonClick" prefHeight="26.0" prefWidth="325.0" />
             <Button fx:id="sendButton" onAction="#onSendButtonClick" prefHeight="26.0" prefWidth="88.0" text="Send">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox fx:id="vBox" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="54.0" prefWidth="433.0">
               <children>
                  <TextField fx:id="newNick" prefHeight="26.0" prefWidth="381.0" />
                  <Button fx:id="changeNick" mnemonicParsing="false" onAction="#onChangeNickButtonClick" prefHeight="26.0" prefWidth="185.0" text="Change nick">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ListView fx:id="dialog" prefHeight="200.0" prefWidth="200.0" />
         </children></VBox>
   </center>
   <top>
      <HBox prefHeight="36.0" prefWidth="433.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="login">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="pass" prefWidth="161.0">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="init" mnemonicParsing="false" onAction="#onInitButtonClick" onMouseClicked="#onInitButtonClick" prefHeight="26.0" prefWidth="57.0" text="Auth">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
            <Accordion />
         </children>
      </HBox>
   </top>
</BorderPane>
